<style>
  .search-btn {
    background-color: rgb(232, 61, 61);
    color: rgb(255, 255, 255);
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: rgb(232, 61, 61);
    color: rgb(255, 255, 255);
